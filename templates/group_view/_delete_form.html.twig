<form method="post" action="{{ path('group_view_delete', {'id': group_view.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ group_view.id) }}">
    <button class="btn btn-danger">Delete</button>
</form>
